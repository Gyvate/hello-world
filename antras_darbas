<html>
 <head>
  <script type="application/javascript">

    function draw() {
      var canvas = document.getElementById('canvas');
      if (canvas.getContext) {
        var ctx = canvas.getContext("2d");

// Draw border
      ctx.beginPath();
      ctx.moveTo(0,0);
      ctx.lineTo(500,0);
      ctx.lineTo(500,500);
      ctx.lineTo(0,500);
      ctx.closePath();
      ctx.stroke(); 
// step = 5
      drawF(5);
      }
        // Recursive draw 
        function drawF(step) {
          if (step > 0) {
          step = step-1; 
          ctx.save();
          ctx.save();
          ctx.save();
          ctx.save();
          ctx.transform(0.25, 0, 0, 0.25, 250, 125); //1
          ctx.rotate(Math.PI);
          drawF(step);
          ctx.restore();
          ctx.transform(0.25, 0, 0, 0.25, 200, 125); //2
          ctx.scale(1, -1);
          drawF(step);
          ctx.restore();
          ctx.transform(0.35, 0, 0, 0.65, 325, -40); //2.5
          ctx.rotate(Math.PI/2);
          ctx.scale(1, -1);
          drawF(step); 
          ctx.restore();
          ctx.transform(0.5, 0, 0, 0.5, 0, 250); //3  
          drawF(step); 
          ctx.restore();
          ctx.transform(0.5, 0, 0, 0.5, 250, 250); //4
          ctx.rotate(Math.PI/2);
          ctx.scale(1, -1);
          drawF(step); 
          }
          else drawT();    
        }   

        function drawT() {
        // Filled red triangle
        //ctx.fillStyle = "rgb(0,0,0)";
        ctx.beginPath();
        ctx.moveTo(150,0);
        ctx.lineTo(150,100);
        ctx.lineTo(300,100);
        ctx.lineTo(300,70);
        ctx.lineTo(330,70); //4
        ctx.lineTo(330,100);
        ctx.lineTo(400,100); //6
        ctx.lineTo(400,130);
        ctx.lineTo(380,130);
        ctx.lineTo(380,190);
        ctx.lineTo(400,190);
        ctx.lineTo(400,400);
        ctx.lineTo(350,400);
        ctx.lineTo(350,320);
        ctx.lineTo(300,320);
        ctx.lineTo(300,260);
        ctx.lineTo(200,260);
        ctx.lineTo(200,350);
        ctx.lineTo(80,500);
        ctx.lineTo(500,500);
        ctx.lineTo(500,0);
        ctx.fill();
        }       
    }
  </script>
 </head>
 <body onload="draw();">
   <h1>Sierpinski triangle</h1>
   <canvas id="canvas" width="500" height="500"></canvas>
 </body>
</html>
