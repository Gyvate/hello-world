<html>
 <head>
 <input type="range" min="0" max="5" value="0" step="1" onchange="showValue(this.value)" />
 <span id="range">0</span>
  <script type="application/javascript">
  
    function showValue(newValue)
    {
      document.getElementById("range").innerHTML=newValue;
	  draw(newValue);
    }
    function draw(newValue) {
      var canvas = document.getElementById('canvas');
      if (canvas.getContext) {
        var ctx = canvas.getContext("2d");

// Draw border
      ctx.beginPath();
      ctx.moveTo(0,0);
      ctx.lineTo(500,0);
      ctx.lineTo(500,500);
      ctx.lineTo(0,500);
      ctx.closePath();
      ctx.stroke(); 
      drawF(newValue);
      }
        // Recursive draw 
        function drawF(step) {
          if (step > 0) {
          step = step-1; 
          ctx.save();
          ctx.save();
          ctx.save();
            
          ctx.transform(0.25, 0, 0, 0.25, 311, 126); //red
          ctx.rotate(Math.PI);
          ctx.fillStyle="rgb(255,0,0)";
          drawF(step);
          ctx.restore();
            
          ctx.transform(0.5, 0, 0, 0.58, 250, 290); //green
          ctx.scale(1, -1);
          ctx.fillStyle="rgb(0,255,0)";
          drawF(step); 
          ctx.restore();
            
          ctx.transform(0.5, 0, 0, 0.5, 0, 250); //blue
          ctx.fillStyle="rgb(0,0,255)";
          drawF(step); 
          ctx.restore();
            
          ctx.transform(0.5, 0, 0, 0.5, 250, 250); //black
          ctx.rotate(Math.PI/2);
          ctx.scale(1, -1);
          ctx.fillStyle="rgb(0,0,0)";
          drawF(step); 
          }
          else drawT();    
        }   

        function drawT() {
        ctx.beginPath();
        ctx.moveTo(150,0);
        ctx.lineTo(150,100);
        ctx.lineTo(300,100);
        ctx.lineTo(300,70);
        ctx.lineTo(330,70);
        ctx.lineTo(330,100);
        ctx.lineTo(400,100);
        ctx.lineTo(400,130);
        ctx.lineTo(380,130);
        ctx.lineTo(380,190);
        ctx.lineTo(400,190);
        ctx.lineTo(400,400);
        ctx.lineTo(350,400);
        ctx.lineTo(350,320);
        ctx.lineTo(300,320);
        ctx.lineTo(300,260);
        ctx.lineTo(200,260);
        ctx.lineTo(200,350);
        ctx.lineTo(80,500);
        ctx.lineTo(500,500);
        ctx.lineTo(500,0);
        ctx.fill();
        }       
    }
  </script>
 </head>
 <body onload="draw();">
   <h1>Antras_Darbas_98</h1>
   <canvas id="canvas" width="500" height="500"></canvas>
 </body>
</html>
