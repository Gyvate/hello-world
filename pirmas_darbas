<html>
<head>
    <title>Nd 1</title>
    <style type="text/css">
        #canvas{
            border: 1px solid black;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script>
        var ctx;
        var deg=0;

        function deg2rad(deg)
        {
            return deg*Math.PI/180;
        }

        /**
         *
         * @param ctx context
         * @param sx  pradinis x  = centras x
         * @param sy  pradinis y  centras y
         * @param r   spindulys
         * @param virsuniu kiek virsuniu
         * @param vr  vidinis spindulys
         * @param rot_deg kiek pasukti
         */
        function star(ctx, sx, sy, r, virsuniu, vr, rot_deg) {
            ctx.save();
            ctx.beginPath();
            ctx.translate(sx, sy);
            ctx.rotate(deg2rad(rot_deg));
            ctx.moveTo(0, -r); // pereiti prie pirmos virsunes

            for (var i = 0; i < virsuniu; i++)
            {
                ctx.rotate(Math.PI/virsuniu);
                ctx.lineTo(0, -vr);
                ctx.rotate(Math.PI/virsuniu);
                ctx.lineTo(0, -r);
            }

            ctx.fill();
            ctx.closePath();
            ctx.restore();
        }

        function circle(ctx, sx, sy, radius) {
            ctx.save();
            ctx.beginPath();
            ctx.fillStyle="#FFFFFF";
            ctx.arc(sx,sy,radius,0,2*Math.PI,false);
            ctx.fill();
            ctx.closePath();
            ctx.restore();
        }

        $( document ).ready( function() {
            ctx = $('#canvas')[0].getContext("2d");
            setInterval(draw,10);
        });
      
        function draw() {
            ctx.clearRect(0,0,500,500);
            star(ctx, 100, 100, 90, 16, 60, deg);
			ctx.fillStyle="#FF00FF";
            circle(ctx,100,100,25);
			star(ctx,250,250,40,12,20,-deg);
			ctx.fillStyle="#00FFFF";
			circle(ctx,250,250,10);
            deg+=0.5;
            if(deg>=360) deg=0;
        }
    </script>
</head>
<body>

    <canvas width="500" height="500" id="canvas">


    </canvas>

</body>
</html>
